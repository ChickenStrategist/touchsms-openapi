  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic",
        "description": "Use your Token ID / Secret (or Access Token pairing) via HTTP Basic.\nUsername/password mapping may vary by account (TODO: confirm).\n"
      }
    },
    "parameters": {
      "ContactId": {
        "name": "contact_id",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string"
        }
      },
      "OptoutId": {
        "name": "optout_id",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string"
        }
      },
      "OptoutListId": {
        "name": "list_id",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    },
    "schemas": {
      "SendSmsRequest": {
        "type": "object",
        "required": [
          "messages"
        ],
        "properties": {
          "sender": {
            "type": "string",
            "description": "Alphanumeric or approved number",
            "example": "MyBiz"
          },
          "schedule_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "webhook_url": {
            "type": "string",
            "format": "uri",
            "nullable": true
          },
          "short_links": {
            "type": "boolean",
            "default": false
          },
          "campaign": {
            "type": "string",
            "nullable": true
          },
          "messages": {
            "type": "array",
            "minItems": 1,
            "maxItems": 1000,
            "items": {
              "type": "object",
              "required": [
                "to",
                "body"
              ],
              "properties": {
                "to": {
                  "type": "string",
                  "example": "+61400000000"
                },
                "body": {
                  "type": "string"
                },
                "media_urls": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "uri"
                  },
                  "description": "For MMS (if enabled)"
                },
                "metadata": {
                  "type": "object",
                  "additionalProperties": true
                }
              }
            }
          }
        }
      },
      "SendSmsAccepted": {
        "type": "object",
        "properties": {
          "batch_id": {
            "type": "string"
          },
          "queued": {
            "type": "integer"
          },
          "invalid": {
            "type": "integer"
          },
          "warnings": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "SendSmsDryRunResult": {
        "type": "object",
        "properties": {
          "valid": {
            "type": "boolean"
          },
          "issues": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "index": {
                  "type": "integer"
                },
                "field": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "Contact": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "mobile": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          },
          "attributes": {
            "type": "object",
            "additionalProperties": true
          }
        }
      },
      "ContactCreate": {
        "type": "object",
        "required": [
          "mobile"
        ],
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "mobile": {
            "type": "string",
            "example": "+61400000000"
